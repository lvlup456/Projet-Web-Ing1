{% extends "header.html.twig" %}

{% block title %}Home!{% endblock %}


{% block body %}


  <div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/images/formations.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
      <div class="row align-items-center justify-content-center text-center">
        <div class="col-md-10" data-aos="fade-up" data-aos-delay="400">
          <div class="row justify-content-center">
            <div class="col-md-8 text-center">
              <h1>{{ form.name }}</h1>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="site-section bg-light">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1 class="text-center">Diplome : {{ form.diplome.name }} ( {{ form.diplome.domaine.name }} )</h1>
          <p>Adresse : {{ form.address }} {{ form.city }}, {{ form.postalcode }}</p>
          <p>Formation du : {{ form.date|date("m/d/Y") }} au {{ form.datefin|date("m/d/Y") }}</p>
          <p>Prix de la formation : {{ form.price }}</p>
          <p>Perspective : {{ form.perspective }}</p>
          <p>Numéro de téléphone : {{ form.phonenumber }}</p>
          <a class="button" href="{{ path("form_inscription", {"_id": form.id }) }}">S'inscrire</a>
        </div>
      </div>
    </div>
  </div>

{% endblock %}

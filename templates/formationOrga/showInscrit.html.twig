{% extends 'header.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/images/inscription.jpg);"
         data-aos="fade" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center">
                <div class="col-md-10" data-aos="fade-up" data-aos-delay="400">
                    <div class="row justify-content-center">
                        <div class="col-md-8 text-center">
                            <h1>Inscrit</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="site-section bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-5
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Nom</th>
                            <td>{{ inscrit.nom }} {{ inscrit.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ inscrit.mail }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ inscrit.nom }} {{ inscrit.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Date de naissance</th>
                            <td>{{ inscrit.datedenaissance ? inscrit.datedenaissance|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Accept√©</th>
                            <td>{{ inscrit.confirmer ? 'Oui' : 'Non' }}</td>
                        </tr>
                        <tr>
                            <th>Documents</th>
                            {% if inscrit.documents is defined %}
                                <td>
                                    {% for document in inscrit.documents %}
                                        <a href="/uploads/documents/{{ document.id }}.{{ document.extension }}" target="_blank" class="list-group-item list-group-item-action">{{ document.name }}</a>
                                    {% endfor %}
                                </td>
                            {% else %}
                                <td colspan="14">Pas de documents</td>
                            {% endif %}

                        </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'header.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/images/inscription.jpg);"
    data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-10" data-aos="fade-up" data-aos-delay="400">
                <div class="row justify-content-center">
                    <div class="col-md-8 text-center">
                        <h1>Formation</h1>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-5">


                <table class="table">
                    <tbody>
                        <tr>
                            <th>Email</th>
                            <td>{{ formation.mail }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ formation.name }}</td>
                        </tr>
                        <tr>
                            <th>Perspective</th>
                            <td>{{ formation.perspective }}</td>
                        </tr>
                        <tr>
                            <th>Mode de financement</th>
                            <td>{{ formation.modeFinancement }}</td>
                        </tr>
                        <tr>
                            <th>Adresse</th>
                            <td>{{ formation.address }}</td>
                        </tr>
                        <tr>
                            <th>Ville</th>
                            <td>{{ formation.city }}</td>
                        </tr>
                        <tr>
                            <th>Code postal</th>
                            <td>{{ formation.postalCode }}</td>
                        </tr>
                        <tr>
                            <th>Numéro de téléphone</th>
                            <td>{{ formation.phoneNumber }}</td>
                        </tr>
                        <tr>
                            <th>Date de début</th>
                            <td>{{ formation.date ? formation.date|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Date de fin</th>
                            <td>{{ formation.dateFin ? formation.dateFin|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>{{ formation.price }}</td>
                        </tr>
                        <tr>
                            <th>Organisation</th>
                            <td>{{ formation.organization.name }}</td>
                        </tr>
                        <tr>
                            <th>Diplôme</th>
                            <td>{{ formation.diplome.name }}</td>
                        </tr>
                        <tr>
                            <th>Inscrits</th>
                            <td>
                                <div class="list-group">
                                    {% for inscrit in formation.inscrits %}
                                    <a href="{{ path('organization_formation_show_inscrit', {'id': inscrit.id}) }}" class="list-group-item list-group-item-action">{{ inscrit.nom }} {{ inscrit.prenom }}</a>
                                    {% else %}
                                    <td colspan="14">Pas d'inscrits</td>
                                    {% endfor %}
                                 </div>
                            </td>
                        </tr>

                    </tbody>
                </table>

            <a href="{{ path('organization_formation_index') }}">Retour à la liste</a>


            {{ include('formationOrga/_delete_form.html.twig') }}

        </div>
    </div>
</div>
</div>
{% endblock %}
{% extends 'header.html.twig' %}

{% block title %}Diplome index{% endblock %}

{% block body %}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/images/inscription.jpg);"
    data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-10" data-aos="fade-up" data-aos-delay="400">
                <div class="row justify-content-center">
                    <div class="col-md-8 text-center">
                        <h1>Index de diplôme</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-5">

                <table class="table">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Domaine</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for diplome in diplomes %}
                        <tr>
                            <td>{{ diplome.name }}</td>
                            <td>{{ diplome.domaine.name }}</td>

                            <td>
                                {{ include('diplome/_delete_form.html.twig') }}
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="3">Pas de Diplôme</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('diplome_new') }}">Créer</a>
            </div>
        </div>
    </div>
</div>

{% endblock %}
{% extends 'header.html.twig' %}

{% block title %}Organization index{% endblock %}

{% block body %}
<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/images/inscription.jpg);"
    data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-10" data-aos="fade-up" data-aos-delay="400">
                <div class="row justify-content-center">
                    <div class="col-md-8 text-center">
                        <h1>Index d'organisations</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-5">
                <table class="table">
                    <thead>
                        <tr>

                            <th>Nom</th>
                            <th>Domaine</th>
                            <th>Numéro de téléphone</th>
                            <th>Site Web</th>
                            <th>Note</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for organization in organizations %}
                        <tr>
                            <td>{{ organization.name }}</td>
                            <td>{{ organization.field }}</td>
                            <td>{{ organization.phoneNumber }}</td>
                            <td>{{ organization.webSite }}</td>
                            <td>{{ organization.note }}</td>
                            <td>
                                <a href="{{ path('organization_show', {'id': organization.id}) }}">Voir</a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="8">Pas d'organisation trouvée </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('organization_new') }}">Créer une organisation</a>
            </div>
        </div>
    </div>
</div>

{% endblock %}
{% extends 'header.html.twig' %}

{% block title %}Organization{% endblock %}

{% block body %}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/images/inscription.jpg);"
    data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-10" data-aos="fade-up" data-aos-delay="400">
                <div class="row justify-content-center">
                    <div class="col-md-8 text-center">
                        <h1>Organisation</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-5">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Numéro d'organisation</th>
                            <td>{{ organization.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ organization.name }}</td>
                        </tr>
                        <tr>
                            <th>Domaine</th>
                            <td>{{ organization.field }}</td>
                        </tr>
                        <tr>
                            <th>Numéro de téléphone</th>
                            <td>{{ organization.phoneNumber }}</td>
                        </tr>
                        <tr>
                            <th>Site Web</th>
                            <td>{{ organization.webSite }}</td>
                        </tr>
                        <tr>
                            <th>Note</th>
                            <td>{{ organization.note }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('organization_index') }}">Retour à la liste</a>


                {{ include('organization/_delete_form.html.twig') }}

            </div>
        </div>
    </div>
</div>
{% endblock %}